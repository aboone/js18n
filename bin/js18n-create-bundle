#!/usr/bin/perl

my $BUNDLE_DIR = "./bundles";
my $DEFAULT_LOCALE = "en";
my $COMMENT = "This is a generated file, don't edit it!";

my $tmpl = <<'EOF';
var %%BUNDLE_NAME%% = {
	name : "%%NAME%%",
	locale : "%%LOCALE%%",
	data : {}
};
%%DATA%%
if (typeof js18n == 'object') {
	js18n.bundleLoaded(%%BUNDLE_NAME%%);
}
EOF

my $file;

if ($#ARGV == -1) {
	print STDERR "Usage: $0 PROPERTY_FILE [PROPERTY_FILE_2 ... N]\n";
	exit 1
}

while ($file = shift) {
	if (! -f $file) {
		print STDERR "Skipping $file (File does not exist!)\n";
	} else {
		my ($bundle, $locale) = ($file =~ /(?:.*\/)?(.*?)(?:_([a-z]{2}(?:_[A-Z]{2})?))?.properties/);
		if ($bundle) {
			if (!$locale) {
				$locale = $DEFAULT_LOCALE;
			}

			my $bundle_name = "${bundle}_${locale}";

			my $data = "";
			open (IN, $file);
			while (<IN>) {
				my ($key, $val) = /^\s*([^\s]+)\s*=\s*(.*)[\s\r\n]*?$/;
				if ($key && $val) {
					$val =~ s/'/\\'/;
					$val =~ s/[\n\r]//g;
					$data .= "$bundle_name.data['$key'] = '$val';\n";
				}
			}
			close(IN);

			if (! -d $BUNDLE_DIR) {
				print STDERR "Output directory $BUNDLE_DIR does not exist! Create it before re-running.\n";
				exit 1;
			}

			my $outfile = "${BUNDLE_DIR}/$bundle_name.js";

			print "Writing to $outfile\n";
			open (OUT, "> $outfile");

			if ($COMMENT) {
				print OUT "/* $COMMENT */\n";
			}

			$js = $tmpl;
			$js =~ s/%%BUNDLE_NAME%%/$bundle_name/g;
			$js =~ s/%%NAME%%/$bundle/;
			$js =~ s/%%LOCALE%%/$locale/;
			$js =~ s/%%DATA%%/$data/;
	
			print OUT $js;

			close(OUT);
		} else {
			print STDERR "Skipping $file".' (Filename must be of the format ${NAME}_${LOCALE}.properties!)'."\n";
		}
	}
}
